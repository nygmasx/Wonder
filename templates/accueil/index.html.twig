{% extends 'base.html.twig' %}

{% block title %}Wonder{% endblock %}

{% block body %}
    <h1>Hello Boss</h1>

    <ul>
        {% for question in questions %}
            <a href="{{ path('question_show', {id: question.id})}}"  class="block d-flex flex-row mb-20 block-shadow">
                <div class="d-flex flex-column mr-20 align-items-center">
                    <i class="fas fa-arrow-up {{ question.rating > 0 ? 'rating-up' : '' }}"></i>
                    <p>{{ question.rating }}</p>
                    <i class="fas fa-arrow-down {{ question.rating < 0 ? 'rating-down' : '' }}"></i>
                </div>
                <div class="flex-fill d-flex flex-column">
                    <div class="pb-20 mb-20 question-content">
                        <h3 class="mb-20">{{ question.title }}</h3>
                        <p class="">{{ question.content }}</p>
                    </div>
                    <div class="d-flex flex-row justify-content-between ">
                        <div class="d-flex flex-row align-items-center ">
                            <img class="avatar mr-10" style="max-width: 85px;" src="https://randomuser.me/api/portraits/men/87.jpg" alt="">
                            <small>Demand√© par <span class="clickable">Jean le Bon</span> </small>
                        </div>
                        <div class="d-flex flex-row align-items-center">
                            <i class="far fa-comment mr-10"></i>
                            <p>{{ question.nbrOfResponse }}</p>
                        </div>
                    </div>
                </div>

            </a>
        {% endfor %}
    </ul>

{% endblock %}
