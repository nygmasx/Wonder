{% extends "base.html.twig" %}


{% block title %}{{ question.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/question_show.css') }}">
{% endblock %}

{% block body %}
    <div class="block">
        <div class="d-flex flex-row-wrap align-items-center pb-30">
            <h3 class="mr-10">{{ question.title }}</h3>
            <div class="question-tag">QUESTION</div>
            <img class="avatar ml-auto" src="https://randomuser.me/api/portraits/men/87.jpg" alt="">
        </div>
        <p class="question-text">{{ question.content }}</p>
        <div class="separator"></div>
        {% for comment in question.comments %}
        <div class="question-response-elem">
            <div class="d-flex flex-row-wrap align-items-center pb-20">
                <img class="avatar mr-10" src="https://randomuser.me/api/portraits/men/84.jpg" alt="">
                <p class="clickable">Jean le Bon</p>
                <span class="ml-auto">12/12/23</span>
            </div>
            <p class="question-response-text">{{ comment.content }}</p>
        </div>
        {% endfor %}
        <div class="separator"></div>
        <h3 class="pb-20">RÃ©pondre</h3>
        <div class="comment-form">
            {{ form_start(form) }}
            {{ form_rest(form) }}
            <button class="btn btn-primary">Soumettre</button>
            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}